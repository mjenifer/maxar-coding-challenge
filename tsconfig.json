{
  "compilerOptions": {
    "target": "es2017",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./src/**/*"]
}
